    <div id="error_explanation">
      <h2> il y a <%= @student.errors.count %> errors</h2>
      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form.label :"First_name" %>
